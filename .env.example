# Discord Bot Token
DCToken=your_discord_bot_token_here

# Finnhub API Key
APIKey=your_finnhub_api_key_here

# Redis Connection
REDIS_URL=redis://user:password@host:port

# Redis Connection Pool Settings (可選)
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_RETRIES=3
REDIS_READ_TIMEOUT=10s
REDIS_WRITE_TIMEOUT=10s
REDIS_POOL_TIMEOUT=30s

# PostgreSQL Connection
DATABASE_Host=your_database_host
DATABASE_Port=5432
DATABASE_Name=your_database_name
DATABASE_User=your_database_user
DATABASE_Password=your_database_password

# Database Connection Pool Settings (可選)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Discord Channel IDs（必填）
CRYPTO_PRICE_CHANNEL_ID=your_crypto_price_channel_id
WATCH_LIST_CHANNEL_ID=your_watch_list_channel_id
PROFIT_REPORT_CHANNEL_ID=your_profit_report_channel_id

# Discord User IDs
DEFAULT_USER_ID=your_default_user_id

# HTTP Client Settings (可選)
CRYPTO_HTTP_TIMEOUT=30s
CRYPTO_HTTP_MAX_IDLE_CONNS=100
CRYPTO_HTTP_IDLE_CONN_TIMEOUT=90s

EXCHANGE_HTTP_TIMEOUT=30s
EXCHANGE_HTTP_MAX_IDLE_CONNS=100
EXCHANGE_HTTP_IDLE_CONN_TIMEOUT=90s

# Logging
LOG_LEVEL=INFO
ENV=development
